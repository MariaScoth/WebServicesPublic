body{
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh; 
    margin: 0;
	font-family: 'Roboto';
	background: linear-gradient(200deg, #FFFF, #92D3EB, #FFFF, #3BAEDA, #FFFF);
}
        
form{
	margin-top: 50px;
    display: flex;
    flex-direction: column; 
    align-items: flex-start; 
}

.form-group{
	display: flex;
	margin-top: 10px;	
}

label{
    margin-top: 10px;	
}

input[type="text"] {
    margin-top: 5px;
	margin-left: 5px;
	align-items: center;
}
        
button{
        margin-top: 20px;
        padding: 5px 20px 5px 20px; 
        cursor: pointer; 
		border: none;
        border-bottom: 4px solid #92D3EB;
        background-color: #3BAEDA; 
        color: white; 
        border-radius: 4px; 
        transition: background-color 0.3s; 
		font-family: 'Roboto-medium';
		font-size: 24px;
}

button:hover{
        background-color: #92D3EB;
}

.image-container{
		margin-top:0px;     
}

img{
    width: 100px;
	height: 100px;
}